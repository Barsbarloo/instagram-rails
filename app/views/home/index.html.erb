<% if user_signed_in? %>
  <%= link_to "Log out", destroy_user_session_path, data: {"turbo-method": "delete"} %>
<% end %>

<div class="vh-100 d-flex justify-content-center align-items-center">
  <div>
    <div class="card py-4 mb-3" style="width: 28rem;">
    <div class="card-body">
      <div class="instagram-logo-link"></div>
          <div class="d-flex justify-content-center">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.email_field :email, placeholder:"Phone number, username, or email", autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.password_field :password, placeholder:"Password", autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check">
              <%= f.check_box :remember_me, class:"form-check-input" %>
              <%= f.label :remember_me, class:"form-check-label" %>
            </div>
          <% end %>

          <div class="actions, mt-3">
            <%= f.submit "Log in", class: "btn btn-primary insta-primary w-100" %>
          </div>
          <% end %>
        </div>

        <hr>

        <div class="d-flex justify-content-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "dark-link"%><br />
        </div>
      </div>
    </div>

    <div class="card py-2" style="width: 28rem">
      <div class="card-body">
        <p class="mb-6 fs-6 text-center">Don't have account?<%=link_to " Sign up", new_user_registration_path, class: "standard-link"%></p>
      </div>
    </div>
  </div>
</div>