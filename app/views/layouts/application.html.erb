<!DOCTYPE html>
<html>
  <head>
    <title>Instagram</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= favicon_link_tag asset_path("instagram.png")%>
  </head>

  <body>
      <div class="row">
      <div class="col">
        <div class="p-4">
          <div class="mb-5">
            <%= link_to root_path do %>
              <%= image_tag "instagram-sidebar-logo.png", width: 103 %>
            <% end %>
          </div>

          <div class="mb-4">
            <%= link_to "", data: { "bs-toggle" => "modal", "bs-target" => "#new-post-modal" }, class: "sidebar-link" do %>
              <%= image_tag "icons/add-button.png", width: 24, class: "me-3" %>
              Create
            <% end %>
          </div>

          <div>
            <%= link_to "Log out", destroy_user_session_path, data: {"turbo-method": "delete"}, class: "p-2" %>
          </div>
        </div>
      </div>
      <div class="col-7">
        <%= yield %>
      </div>
      <div class="col-2">
        3 of 3
      </div>
    </div>
    <%= render "layouts/create_post_modal" %>
  </body>
</html>
